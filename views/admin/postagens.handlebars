<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Novas Postagens</button></a>


{{#each postagens}}
    <div class="card">
        <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>{{descricao}}</p>
        <small>{{data}}</small>
        <small>{{categoria.nome}}</small>
        </div>
    </div>

{{else}}

    <p>Nenhuma Categoria Salva</p>

{{/each}}