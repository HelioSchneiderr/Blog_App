<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Novas Postagens</button></a>


{{#each postagens}}
    <div class="card">
        <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>{{descricao}}</p>
        <small>{{data}}</small>
        <small>{{categoria.nome}}</small><br>
        <a href="postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar Postagem</button></a>
        <a href="postagens/deletar/{{_id}}"><button class="btn btn-success mt-3">Apagar Postagem</button></a>
        </div>
    </div>

{{else}}

    <p>Nenhuma Categoria Salva</p>

{{/each}}