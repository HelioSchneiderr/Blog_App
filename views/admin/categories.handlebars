<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small>
            <p><a href="categories/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Categoria</button></a></p>
            <form action="categories/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-4">Deletar Categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma Categoria Registrada</h4>
{{/each}}